@page "/login"
@layout EmptyLayout
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using UsersLogin.Models;
@using UsersLogin.PanelService;
@rendermode InteractiveServer
@inject NavigationManager navManager
@inject AdminPanelService adminPanelService;

<div class="container mt-5" style="max-width: 400px;">
    <h3 class="text-center mb-4">üîê Login</h3>

    <form @onsubmit="HandleLogin">
        <div class="form-group mb-3">
            <label>Email :</label>
            <input type="email" class="form-control" @bind="loginModel.EmailId" required />
        </div>

        <div class="form-group mb-3">
            <label>Password :</label>
            <input type="password" class="form-control" @bind="loginModel.Password" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>

    @if (!string.IsNullOrEmpty(alertMessage))
    {
        <div class="alert alert-warning mt-3">@alertMessage</div>
    }

    <p class="mt-4 text-center">Don't have an account? <a href="/register">Register</a></p>
</div>

@code {
    private LoginModel loginModel = new();
    private string alertMessage;

    private async Task HandleLogin()
    {
        var response = await adminPanelService.Login(loginModel);

        if (response.Success)
        {
            navManager.NavigateTo("/");  // ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡πÑ‡∏õ /
        }
        else
        {
            alertMessage = response.Message ?? "Login failed. Please try again.";
        }
    }
}
